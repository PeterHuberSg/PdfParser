<Window x:Class="PdfFilesTextBrowser.PdfStreamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfFilesTextBrowser"
        mc:Ignorable="d"
        Title="PdfStreamWindow" >
  <DockPanel>
    <StatusBar x:Name="MainStatusBar" DockPanel.Dock="Bottom">
      <StatusBarItem>
        <StackPanel Orientation="Horizontal">
          <RadioButton x:Name="CharRadioButton" Content="_Char"/>
          <RadioButton x:Name="HexRadioButton" Content="_Hex"/>
        </StackPanel>
      </StatusBarItem>
      <Separator/>
      <StatusBarItem>
        <Button x:Name="FindButton" Content="_Find ^f"/>
      </StatusBarItem>
    </StatusBar>
    <TextBox x:Name="StreamTextBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
  </DockPanel>
</Window>
